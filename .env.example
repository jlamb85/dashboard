# Server Configuration
SERVER_ADDRESS=0.0.0.0:8080          # Full address
# OR use separate host and port:
# SERVER_HOST=0.0.0.0
# SERVER_PORT=8080

# Environment
ENVIRONMENT=production                # development, staging, production

# Authentication - CHANGE THESE IN PRODUCTION
AUTH_ENABLED=true
AUTH_USERNAME=admin
AUTH_PASSWORD=your_secure_password_here

# TLS/HTTPS
TLS_ENABLED=false                     # Set to true for HTTPS
TLS_CERT_FILE=/etc/dashboard/certs/server.crt
TLS_KEY_FILE=/etc/dashboard/certs/server.key

# Monitoring
MONITORING_INTERVAL=30                # seconds
MONITORING_TIMEOUT=2                  # seconds per port check
